#!/usr/bin/env bash

if [ "$UID" -ne 0 ]
then
    echo "This script requires superuser priviledges."
    exec sudo "$0" "$@"
fi

set -e

# Add PPA for software not in the default Ubuntu repositories
add-apt-repository -y ppa:jonathonf/barrier

# Update the list of available packages
apt update

# Update all currently installed packages
apt upgrade -y

# Install some useful packages
apt install -y --no-install-recommends \
    aconnectgui \
    augeas-tools \
    barrier \
    curl \
    feh \
    git \
    htop \
    kmidimon \
    net-tools \
    nginx \
    openbox \
    openssh-server \
    overlayroot \
    pavucontrol \
    qjackctl \
    qsynth \
    vmpk \
    '' # dummy entry to terminate the list

# Set hostname based on eth0 mac address
# TODO

# Set default exhibit based on hostname
# TODO ln -s exhibit-something exhibit-default

# Install kiosk browser
KIOSK_BROWSER_VERSION="0.11.0-alpha.4"
KIOSK_BROWSER_VERSION_INSTALLED=$(dpkg-query --showformat='${Version} ${Status}' --show kiosk-browser 2> /dev/null | awk '$NF == "installed"{print $1}')
if [ "$KIOSK_BROWSER_VERSION" = "$KIOSK_BROWSER_VERSION_INSTALLED" ]
then
    echo "kiosk-browser v$KIOSK_BROWSER_VERSION already installed"
else
    # First install dependencies
    apt install -y --no-install-recommends \
        gconf-service \
        gconf-service-backend \
        gconf2 \
        gconf2-common \
        libappindicator1 \
        libgconf-2-4 \
        libindicator7 \
        '' # dummy entry to terminate the list
    
    # Now install the kiosk-browser package
    TEMP_DEB="$(mktemp)"
    wget -O "$TEMP_DEB" "https://github.com/IMAGINARY/kiosk-browser/releases/download/v"$KIOSK_BROWSER_VERSION"/kiosk-browser_"$KIOSK_BROWSER_VERSION"_amd64.deb"
    dpkg -i "$TEMP_DEB"
    rm -f "$TEMP_DEB"
fi

# Fetch and execute lalalab-script installer
curl -L https://github.com/IMAGINARY/lalalab-scripts/raw/feature/install-scripts/bin/install-lalalab-scripts | bash

# Install the exhibits
for f in /opt/lalalab-scripts/bin/install-*; do
    bash "$f" || break # if needed 
done

# Make openbox the default session

reboot
