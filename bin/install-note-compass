#!/usr/bin/env bash

if [ "$UID" -ne 0 ]
then
    >&2 echo "This script requires superuser priviledges."
    exit 1
fi

# Install dependencies
apt install -yq \
    nginx \
    '' # dummy entry to terminate the list

# Target version
COMMITISH="3fb61a4470a362219c543e51cdcadd71352713c0"

# Make sure the folder exists
INSTALL_DIR="/opt/note-compass"
mkdir -p "$INSTALL_DIR"

cd "$INSTALL_DIR"
git init
git remote remove origin &> /dev/null || true
git remote add origin https://github.com/danielramosg/tonkreisel2.git
git fetch --tags origin
git reset --hard origin/master
git checkout "$COMMITISH"

# Setup the nginx web server
augtool -s <<EOF
set /files/etc/nginx/sites-available/default/server/location[#uri = "/note-compass/"]/#uri "/note-compass/"
set /files/etc/nginx/sites-available/default/server/location[#uri = "/note-compass/"]/alias "/opt/note-compass/dist/"
set /files/etc/nginx/sites-available/default/server/location[#uri = "/note-compass/"]/autoindex "off"
set /files/etc/nginx/sites-available/default/server/location[#uri = "/note-compass/"]/index[0] "index.html"
set /files/etc/nginx/sites-available/default/server/location[#uri = "/note-compass/"]/index[1] "index.htm"
EOF

systemctl enable nginx
systemctl restart nginx
