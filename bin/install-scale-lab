#!/usr/bin/env bash

if [ "$UID" -ne 0 ]
then
    >&2 echo "This script requires superuser priviledges."
    exit 1
fi

# Target version
COMMITISH="de4b0b31e3d9dff0331a9a693674813f8cc3688b"

# Make sure the folder exists
INSTALL_DIR="/opt/scale-lab"
mkdir -p "$INSTALL_DIR"

cd "$INSTALL_DIR"
git init
git remote remove origin &> /dev/null || true
git remote add origin https://github.com/CindyJS/ScaleLab.git
git fetch --tags origin
git reset --hard origin/master
git checkout "$COMMITISH"
